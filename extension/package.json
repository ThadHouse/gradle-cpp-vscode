{
    "name": "gradle-cpp-vscode",
    "displayName": "gradle-cpp-vscode",
    "description": "Support for gradle C++ projects in vscode",
    "version": "0.0.1",
    "publisher": "wpifirst",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "license": "BSD-3-Clause",
    "repository": "https://github.com/wpilibsuite/gradle-cpp-vscode",
    "enableProposedApi": true,
    "activationEvents": [
        "onCommand:gradlevscpp.refreshProperties",
        "onCommand:gradlevscpp.selectToolchain",
        "onLanguage:c",
        "onLanguage:cpp",
        "workspaceContains:**/vscodeconfig.json"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Gradle C++ configuration",
            "properties": {
                "gradlecpp.runConfigurationOnline": {
                    "type": "boolean",
                    "default": false,
                    "description": "Run Gradle configuration online rather then offline",
                    "scope": "resource"
                }
            }
        },
        "commands": [
            {
                "command": "gradlevscpp.refreshProperties",
                "title": "Refresh Gradle C++ Properties",
                "category": "Gradle C++"
            },
            {
                "command": "gradlevscpp.selectToolchain",
                "title": "Select Current C++ Toolchain",
                "category": "Gradle C++"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/glob": "^5.0.35",
        "glob": "^7.1.2",
        "jsonc-parser": "^2.0.0"
    }
}
